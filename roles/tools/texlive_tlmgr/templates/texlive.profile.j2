# TeX Live non-GUI batch install profile (XDG, generated by Ansible)
selected_scheme {{ texlive_scheme }}

# Install directories (XDG)
TEXDIR {{ texlive_root }}/{{ tl_year }}
TEXMFLOCAL {{ texlive_root }}/texmf-local
TEXMFSYSVAR {{ texlive_root }}/{{ tl_year }}/texmf-sysvar
TEXMFSYSCONFIG {{ texlive_root }}/{{ tl_year }}/texmf-sysconfig
TEXMFVAR {{ texmfvar_dir }}
TEXMFCONFIG {{ texmfconfig_dir }}
TEXMFHOME {{ texmfhome_dir }}

# Zet alleen de huidige platform arch aan
binary_{{ tl_binflag }} 1

# Installer options
instopt_adjustpath 0     # geen pad injectie; wij regelen PATH zelf
instopt_letter 0         # A4 ipv Letter
instopt_portable 0       # geen portable install


# Doc/source (default: 1); pas aan als je slank wilt
tlpdbopt_install_docfiles 1
tlpdbopt_install_srcfiles 1
