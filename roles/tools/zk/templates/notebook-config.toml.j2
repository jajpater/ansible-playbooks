# zk notebook configuration
# This is a local configuration for this specific notebook

# Note creation rules
[note]
language = "nl"
default-title = "Untitled"
filename = {{ "\"{{id}}-{{slug title}}\"" }}
extension = "{{ zk_note_extension }}"
template = "{{ zk_default_template }}.md"
id-charset = "{{ zk_note_id_charset }}"
id-length = {{ zk_note_id_length }}
id-case = "{{ zk_note_filename_case }}"

# External tools configuration
[tool]
editor = "{{ zk_default_editor }}"
shell = "{{ zk_default_shell }}"

# Custom note groups
[group.daily]
paths = ["dagboek"]
note.filename = {{ "\"{{id}}-dagboek.md\"" }}
note.template = "daily.md"

[group.weekly]
paths = ["wekelijks"]  
note.filename = {{ "\"{{id}}-week.md\"" }}
note.template = "weekly.md"

[group.project]
paths = ["projecten"]
note.template = "project.md"

# Command aliases
[alias]
ls = "zk list $@"
n = "zk new --title $@"
e = "zk edit --interactive $@"
f = "zk list --interactive $@"
recent = "zk list --sort created- --created-after 'last two weeks'"
daily = "zk new --group daily"
weekly = "zk new --group weekly"