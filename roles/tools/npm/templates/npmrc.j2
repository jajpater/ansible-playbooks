# npm XDG-compliant configuration file
# Generated by Ansible

# XDG Base Directory Specification compliance
cache={{ npm_cache_dir }}
prefix={{ npm_data_dir }}
init-module={{ npm_config_dir }}/npm-init.js

# Registry configuration
registry={{ npm_registry }}

# Security and verification
audit-level=moderate
fund=false

# Performance settings
progress=true
loglevel=warn

# Global package installation settings
save=true
save-exact=false
engine-strict=false

# Development settings
init-author-name={{ ansible_env.USER | default('') }}
init-license=MIT
init-version=1.0.0

{% if npm_config %}
# Custom configuration
{% for key, value in npm_config.items() %}
{% if key not in ['cache', 'prefix', 'init-module', 'userconfig'] %}
{{ key }}={{ value }}
{% endif %}
{% endfor %}
{% endif %}
